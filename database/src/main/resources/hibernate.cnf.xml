<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="connection.url">jdbc:h2:mem:portal;INIT=CREATE SCHEMA IF NOT EXISTS app</property>
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="default_schema">app</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">pass</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <property name="hibernate.hbm2ddl.auto">create-drop</property>

        <mapping class="com.stetsko.entity.Tag"/>
        <mapping class="com.stetsko.entity.User"/>
        <mapping class="com.stetsko.entity.Editor"/>
        <mapping class="com.stetsko.entity.Administrator"/>
        <mapping class="com.stetsko.entity.Content"/>
        <mapping class="com.stetsko.entity.ContentType"/>
        <mapping class="com.stetsko.entity.Category"/>
        <mapping class="com.stetsko.entity.CategoryTranslation"/>
        <mapping class="com.stetsko.entity.Comment"/>
        <mapping class="com.stetsko.entity.ExtraField"/>
        <mapping class="com.stetsko.entity.ExtraFieldType"/>
        <mapping class="com.stetsko.entity.ContentTranslation"/>

    </session-factory>
</hibernate-configuration>